{
  "name": "@openlab/climatered-client",
  "version": "2.6.0",
  "repository": "digitalinteraction/climatered-client",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --modern",
    "lint": "vue-cli-service lint",
    "preversion": "npm run lint",
    "readme-toc": "md-toc -i",
    "report": "vue-cli-service build --modern --report-json && webpack-bundle-analyzer dist/report.json",
    "release": "npm run preversion && standard-version",
    "release:beta": "npm run preversion && standard-version --prerelease=beta"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-brands-svg-icons": "^5.15.4",
    "@fortawesome/free-regular-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/vue-fontawesome": "^2.0.2",
    "@openlab/deconf-shared": "^3.2.0",
    "@openlab/deconf-ui-toolkit": "^2.2.1",
    "bulma": "^0.9.3",
    "copy-to-clipboard": "^3.3.1",
    "core-js": "^3.17.2",
    "ky": "^0.28.5",
    "socket.io-client": "^4.2.0",
    "vue": "^2.6.14",
    "vue-i18n": "^8.25.0",
    "vue-router": "^3.5.2",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@robb_j/md-toc": "^0.3.3",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "@vue/cli": "^4.5.13",
    "@vue/cli-plugin-babel": "^4.5.13",
    "@vue/cli-plugin-eslint": "^4.5.13",
    "@vue/cli-plugin-router": "^4.5.13",
    "@vue/cli-plugin-typescript": "^4.5.13",
    "@vue/cli-plugin-vuex": "^4.5.13",
    "@vue/cli-service": "^4.5.13",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-vue": "^7.17.0",
    "json-loader": "^0.5.7",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "raw-loader": "^4.0.2",
    "sass": "^1.39.0",
    "sass-loader": "^10.2.0",
    "standard-version": "^9.3.1",
    "vue-svg-loader": "^0.16.0",
    "vue-template-compiler": "^2.6.14",
    "webpack-bundle-analyzer": "^4.4.2",
    "yaml-loader": "^0.6.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/typescript/recommended",
      "@vue/prettier",
      "@vue/prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "@typescript-eslint/camelcase": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "gitHooks": {
    "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "vue-cli-service lint"
    ],
    "*.{scss,yml,md,mdx}": [
      "prettier"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
